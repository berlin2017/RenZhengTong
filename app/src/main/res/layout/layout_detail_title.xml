<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/detail_title_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/detail_title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="17sp"
        android:layout_toLeftOf="@+id/detail_title_collect"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/detail_title_back"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/detail_title_share"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_share" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/detail_title_collect"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/detail_title_share"
        android:src="@drawable/ic_collect" />

</RelativeLayout>