<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_news_imageview"
        android:layout_width="80dp"
        android:layout_height="60dp"
        fresco:placeholderImage="@mipmap/ic_launcher_round"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/item_news_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_news_name"
        android:layout_toRightOf="@id/item_news_name"
        android:layout_marginLeft="10dp"
        android:textSize="11sp" />

    <TextView

        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/item_news_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_news_name"
        android:layout_toLeftOf="@id/item_news_imageview"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="15sp" />

</RelativeLayout>